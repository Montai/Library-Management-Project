<h2 style="text-align: center">Sign Up</h2>
<div class="container well">
  <%= form_for @user, url: { action: 'new_user' }, html: { method: 'post' } do |f| %>
    <div class="col-sm-6 col-md-offset-3">
      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name, input_html: { id: 'name' }, class: 'form-control' %>
      </div>
      <div class="field">
          <%= f.label :password %><br>
          <%= f.password_field :password, input_html: { id: 'password'}, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :email %><br>
          <%= f.text_field :email, input_html: { id: 'email'}, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :address %><br>
          <%= f.text_field :address, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :phone, "Phone Number" %><br>
          <%= f.text_field :phone, class: 'form-control' %>
        </div>
        <br>
        <div class="actions">
          <%= f.submit 'Submit', class: 'btn btn-info active'%>
        </div>
        <div align="left">
          <h5>Already signed up? Log In to continue</h5>
          <%= link_to 'Log In', root_path, class: 'btn btn-primary' %>
        </div>
      </div>
  <% end %>
</div>