<div class="container well">
  <%= form_for([@post, @book.posts.build], url: book_posts_path(@book)) do |f| %>
    <div class="form-group">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </div>
    <div class="actions">
      <%= f.submit :post, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>